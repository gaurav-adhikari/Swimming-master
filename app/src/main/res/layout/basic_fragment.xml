        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The breaststroke is without a doubt one of the most popular swimming strokes. In fact, many recreational swimmers are perfectly happy using this swim stroke all the time. Because it is so popular, we consider it as one of the basic swimming strokes."
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="italic">
        </TextView>


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ARM MOVEMENT"
